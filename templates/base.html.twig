<style>
    th{
        margin: 3px;
        padding: 5px;
        width: max-content;
        border: 1px solid;
        background: #5eb5e0;
        border-collapse: collapse;
    }

    td{
        border-collapse: collapse;
        margin: 3px;
        padding: 5px;
        width: max-content;
        border: 1px solid;
        background: #AAAAAA;
    }
    .deleteButton{
        margin: 3px;
        padding: 5px;
        width: max-content;
        border: 1px;
        background: #AA3333;
    }

    .editButton{
        margin: 3px;
        padding: 5px;
        width: max-content;
        border: 1px;
        background: #916319;
    }
</style>

<!DOCTYPE html>


<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}WCD{% endblock %}</title>
    </head>
    <body>

    <h1 style="text-align:center">WELCOME TO THE WORLD COSMONAUT DATABASE</h1>
        {% block body %}
            <table style=" margin:0 auto;" >
                <th>First name</th>
                <th>Surname</th>
                <th>Date of birth</th>
                <th>Superpower</th>
                <th>
                    <a class="submenu_item" href={{ path("add_edit")}}?{{"cosmonaut="~0}}>
                        <button type="button" >Add new Cosmonaut</button>
                    </a>
                </th>
                {% for cosmonaut in cosmonauts %}
                    <tr>
                        <td>{{ cosmonaut.firstName }}</td>
                        <td>{{ cosmonaut.surname }}</td>
                        <td>{{ cosmonaut.dateOfBirth }}</td>
                        <td>{{ cosmonaut.superpower }}</td>
                        <td class="editButton">
                            <a class="submenu_item" href={{ path('add_edit')}}?{{"cosmonaut="~cosmonaut.id}}>
                            <button type="button" >Edit</button>
                            </a>
                        </td>

                        <td class="deleteButton">
                            <button type="button">
                            <a class="submenu_item" href={{ path('delete_cosmonaut')}}?{{"cosmonaut="~cosmonaut.id}}>
                         Delete
                            </a>
                            </button>
                        </td>

                    </tr>


                {% endfor %}
            </table>
        {% endblock %}
    </body>
    {% block javascripts %}
    {% endblock %}
</html>
